<Window x:Class="AutoTest.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading" Height="110" Width="350" WindowStartupLocation="CenterOwner" Style="{StaticResource modalWindow}">
    <StackPanel>
        <TextBlock Name="txtMessage" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Please wait..." Margin="10"/>
        <ProgressBar IsIndeterminate="True" Height="20" HorizontalAlignment="Stretch" Margin="10,0,10,10"/>
    </StackPanel>
</Window>
